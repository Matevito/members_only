<%- include("./layout"), {title:title} %>
<body>
    <%- include("./navbar") %> 
    <div class="container-fluid">
        <div class="row">
            
            <form action="" method="POST">
                <h1>Sign Up Form...</h1>
                <label class="form-label" for="first_name">First name:</label>
                <input class="form-control" name="first_name" type="text" required="true">
                <label class="form-label" for="second_name">Second name:</label>
                <input class="form-control" name="second_name" type="text" required="true">

                <label class="form-label" for="username">Email:</label>
                <input class="form-control" name="username" type="text" required="true">
                <label class="form-label" for="password_1">Password:</label>
                <input class="form-control" name="password_1" type="password" required="true">
                <label class="form-label" for="password_2">Re-enter Password:</label>
                <input class="form-control" name="password_2" type="password" required="true">
                <% // name- secondname %>
                
                <hr>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% if(errors) { %>
                <ul>
                    <% errors.forEach((error) => { %>
                        <li class="text-danger"> <%= error.msg %>  </li>
                    <% }) %> 
                </ul>
            <% } %> 
        </div>
    </div>
</body>
</html>
